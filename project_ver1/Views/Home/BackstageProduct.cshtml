@{
    ViewData["Title"] = "BackstageProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "BackstageProduct";
}
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@400;500;700&display=swap" rel="stylesheet">
<style>
    .mb-box {
        width: 55%;
        padding: 120px;
        border-radius: 15px;
        border: 2px solid hsla(0, 0%, 85%, 1);
        margin: 0 auto;
        background-color: rgba(222, 237, 240, 0.953);
        box-shadow: 6px 6px 6px 2px gray;
    }

    .logout {
        text-decoration: none;
        border: none;
        margin-left: 15px;
        padding: 5px;
        width: 35%;
        border-radius: 20px;
        margin-bottom: 20px;
        color: white;
        cursor: pointer;
        font-size: 25px;
    }

    .sidebar {
        width: 250px;
        position: fixed;
        top: 100px;
        left: 0;
        height: 400px;
        background-color: #f8f9fa;
        border-right: 1px solid #dee2e6;
        padding-top: 20px;
    }

        .sidebar a {
            padding: 10px 15px;
            text-decoration: none;
            font-size: 18px;
            color: #333;
            display: block;
        }

      .sidebar a:hover {
          background-color: #ddd;
            }

   /*  ------------------------------------------- */
    .order {
        position: relative;
        top: -150px;
        left: 40px;
        text-decoration: none;
        border: none;
        padding: 5px;
        width: 15%;
        border-radius: 10px;
        margin-bottom: 15px;
        color: whitesmoke;
        cursor: pointer;
        font-size: 25px;
    }

        .order:hover {
            background-color: gray;
        }

   

    .order_F {
        border: 2px solid hsla(0, 0%, 85%, 1);
        padding: 5px;
    }

    .order_R {
        border: 2px solid hsla(0, 0%, 85%, 1);
        padding: 5px;
    }

    .T-title:hover {
        background-color: black;
    }

    .btn-custom {
        background-color: #1B813E;
        border-color: #1B813E;
    }

        .btn-custom:hover {
            background-color: #7BA23F;
            border-color: #7BA23F;
        }

   

    /* 捲軸 */
    .table-container {
        max-height: 500px;
        overflow-y: auto;
    }

        .table-container table {
            table-layout: fixed;
        }

        .table-container td {
            word-wrap: break-word;
            white-space: normal;
        }

    .apple {
        position: sticky;
        top: -1px;
        z-index: 10;
    }

    h1 {
        font-weight: normal;
    }


</style>

<div class="container-md">
    <div class="sidebar">
        <a href="@Url.Action("Backstage", "Home")">員工主頁</a>
        <a href="@Url.Action("BackstageContact", "Home")">顧客問題</a>
        <a href="@Url.Action("BackstageProduct", "Home")">產品訂單</a>
        <a href="@Url.Action("News", "Home")">訂房訂單</a>
        <a href="@Url.Action("BackstageMember", "Home")">會員資料管理</a>
        <br />
        <br />
        <form id="logoutForm" asp-action="Logout" asp-controller="Home" method="post">
            <button type="submit" class="logout btn  btn-secondary">登出</button>
        </form>

    </div>
    <br />
    <h1 class="text-center " style="font-family: 'Noto Sans TC', sans-serif;">產品訂單</h1><br />
    <select id="filterSelect">
        <option value="all">所有訂單</option>
        <option value="unanswered">尚未完成</option>
        <option value="answered">已完成</option>
    </select>
    <br />
    <br />
    <div class="table-container">
        <table class="table table-hover order_R" style="background-color:white;" >
            @if (Model.Count > 0)
            {
                <thead class=" table table-dark apple">
                    <tr>
                        <th>訂單編號</th>
                        <th>顧客姓名</th>
                        <th>下單時間</th>
                        <th>商品名稱</th>
                        <th style="text-align: center;">商品單價</th>
                        <th style="text-align: center;">購買數量</th>
                        <th>總價</th>
                        <th>訂單狀態</th>
                        <th>完成訂單</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.ID</td>
                            <td>@order.Customer.Name</td>
                            <td>@order.OderTime</td>
                            <td>
                                @foreach (var detail in order.Agricultural_Order_Details)
                                {
                                    <div style="height:65px;">
                                        <p>@detail.Product.Name</p>
                                    </div>
                                    
                                    
                                }
                            </td>
                            <td>
                                @foreach (var detail in order.Agricultural_Order_Details)
                                {
                                    <div style="height:65px;text-align: center;">
                                        <p>@detail.Price</p>
                                    </div>


                                }
                            </td>
                            <td>
                                @foreach (var detail in order.Agricultural_Order_Details)
                                {
                                    <div style="height:65px;text-align: center;">
                                        <p>@detail.Count</p>
                                    </div>


                                }
                            </td>
                            <td>@order.SumPrice</td>
                            <td>
                                <p class="@(order.OrderFinished ? "text-success" : "text-danger")">
                                    @(order.OrderFinished ? "已完成" : "尚未完成")
                                </p>
                            </td>
                            <td>
                                @if (!order.OrderFinished)
                                {
                                    <form asp-action="BackstageProductEdit" asp-controller="Home" method="post">
                                        <input type="hidden" name="orderId" value="@order.ID" />
                                        <input type="hidden" name="employeeId" value="@ViewBag.UserId" />
                                        <button type="submit" class="btn btn-primary btn-custom">完成</button>
                                    </form>
                                }
                                else
                                {
                                    <p>已完成</p>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            }
            else
            {
                <tbody>
                    <tr>
                        <td colspan="9">
                            <h1 style="text-align:center; color:darkolivegreen">目前沒有訂單</h1>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>


    @*  <form id="logoutForm" asp-action="Logout" asp-controller="Home" method="post">
    <button type="submit" class="logout btn  btn-danger">登出</button>
    </form> *@

</div>
<br />
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const filterSelect = document.getElementById('filterSelect');
        filterSelect.addEventListener('change', function () {
            const filterValue = filterSelect.value;
            const rows = document.querySelectorAll('.order_R tbody tr');

            rows.forEach(row => {
                const statusCell = row.querySelector('td:nth-child(8) p');
                const status = statusCell.textContent.trim();

                if (filterValue === 'all') {
                    row.style.display = '';
                } else if (filterValue === 'unanswered' && status === '尚未完成') {
                    row.style.display = '';
                } else if (filterValue === 'answered' && status === '已完成') {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    });
</script>



