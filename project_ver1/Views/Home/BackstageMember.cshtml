@{
    ViewData["Title"] = "BackstageMember";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "BackstageMember";
}
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<style>
    .mb-box {
        width: 55%;
        padding: 120px;
        border-radius: 15px;
        border: 2px solid hsla(0, 0%, 85%, 1);
        margin: 0 auto;
        background-color: rgba(222, 237, 240, 0.953);
        box-shadow: 6px 6px 6px 2px gray;
    }

    .logout {
        text-decoration: none;
        border: none;
        background-color: rgba(255, 0, 0, 0.87);
        padding: 5px;
        width: 35%;
        border-radius: 20px;
        margin-bottom: 20px;
        color: white;
        cursor: pointer;
        font-size: 25px;
    }

    .order {
        position: relative;
        top: -150px;
        left: 40px;
        text-decoration: none;
        border: none;
        padding: 5px;
        width: 15%;
        border-radius: 10px;
        margin-bottom: 15px;
        color: whitesmoke;
        cursor: pointer;
        font-size: 25px;
    }

        .order:hover {
            background-color: gray;
        }

    .logout {
        text-decoration: none;
        border: none;
        background-color: rgba(255, 0, 0, 0.87);
        padding: 5px;
        width: 35%;
        border-radius: 20px;
        margin-bottom: 20px;
        color: white;
        cursor: pointer;
        font-size: 25px;
    }

    .order_F {
        border: 2px solid hsla(0, 0%, 85%, 1);
        padding: 5px;
    }

    .order_R {
        border: 2px solid hsla(0, 0%, 85%, 1);
        padding: 5px;
    }

    .T-title:hover {
        background-color: black;
    }

    .btn-custom {
        background-color: #1B813E;
        border-color: #1B813E;
    }

        .btn-custom:hover {
            background-color: #7BA23F;
            border-color: #7BA23F;
        }

    .sidebar {
        width: 250px;
        position: fixed;
        top: 100px;
        left: 0;
        height: 400px;
        background-color: #f8f9fa;
        border-right: 1px solid #dee2e6;
        padding-top: 20px;
    }

        .sidebar a {
            padding: 10px 15px;
            text-decoration: none;
            font-size: 18px;
            color: #333;
            display: block;
        }

            .sidebar a:hover {
                background-color: #ddd;
            }

    /* 捲軸 */
    .table-container {
        max-height: 500px;
        overflow-y: auto;
    }

        .table-container table {
            table-layout: fixed;
        }

        .table-container td {
            word-wrap: break-word;
            white-space: normal;
        }

    .apple {
        position: sticky;
        top: -1px;
        z-index: 10;
    }

</style>

<div class="container-md">
    <div class="sidebar">
        <a href="@Url.Action("Backstage", "Home")">員工主頁</a>
        <a href="@Url.Action("BackstageContact", "Home")">顧客問題</a>
        <a href="@Url.Action("Index", "Home")">產品訂單</a>
        <a href="@Url.Action("News", "Home")">訂房訂單</a>
        <a href="@Url.Action("BackstageMember", "Home")">會員資料管理</a>
        <br />
        <br />
        <form id="logoutForm" asp-action="Logout" asp-controller="Home" method="post">
            <button type="submit" class="logout btn  btn-danger">登出</button>
        </form>

    </div>
    <h1 class="text-center">會員資料管理</h1>

    <br />
    <br />
    <div class="table-container">
        <table class="table table-hover order_R" style="background-color:white;">
            @if (Model.Count > 0)
            {
                <thead class=" table table-dark apple">
                    <tr>
                        <th>會員ID</th>
                        <th>會員姓名</th>
                        <th>會員密碼</th>
                        <th>會員信箱</th>
                        <th>會員電話</th>
                        <th>會員住址</th>
                        <th>修改會員資料</th>
                        <th>刪除會員</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var member in Model)
                    {
                        <tr>
                            <td>@member.ID</td>
                            <td>
                                @member.Name
                            </td>
                            <td>@member.Pwd</td>
                            <td>@member.Email</td>
                            <td>@member.Phone</td>
                            <td>@member.Address</td>
                            <td>
                                <form asp-action="MemberEdit" asp-controller="Home" method="get">
                                    <input type="hidden" name="id" value="@member.ID" />
                                    <button type="submit" class="btn btn-primary">編輯</button>
                                </form>
                            </td>
                            <td>
                                <form id="deleteForm_@member.ID" asp-action="DeleteMember" asp-controller="Home" method="post">
                                    <input type="hidden" name="id" value="@member.ID" />
                                    <button type="button" class="btn btn-danger" onclick="confirmDelete(@member.ID)">刪除</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            }
            else
            {
                <tbody>
                    <tr>
                        <td colspan="8">
                            <h1 style="text-align:center; color:darkolivegreen">暫無會員</h1>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>

    @*  <form id="logoutForm" asp-action="Logout" asp-controller="Home" method="post">
    <button type="submit" class="logout btn  btn-danger">登出</button>
    </form> *@

</div>
<br />
<script>
    function confirmDelete(id) {
        if (confirm('確定要刪除此會員嗎？')) {
            $('#deleteForm_' + id).submit();
        }
    }
</script>
