@{
    ViewData["Title"] = "SearchRooms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .room-card {
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        margin-bottom: 20px;
        position: relative;
    }

        .room-card img {
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            width: 100%;
            height: auto;
        }

    .book-now-btn {
        position: absolute;
        bottom: 15px;
        right: 15px;
    }
</style>
@* @model List<project_ver1.Models.Rooms> *@

@if (Model != null && Model.Count > 0)
{
    <script>
        function bookRoom(roomId, checkInDate, checkOutDate) {
            var url = '@Url.Action("BookRoom", "Room")' + '?roomId=' + roomId + '&checkInDate=' + checkInDate + '&checkOutDate=' + checkOutDate;
            window.location.href = url;
        }
    </script>
    <h2>Search Results</h2>
    <p>Number of available rooms: @Model.Count</p>

    <div class="row">
        @foreach (var room in Model)
        {
            <div class="room-card">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="https://via.placeholder.com/300x200" class="card-img" alt="@room.ID">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@room.ID</h5>
                            <p class="card-text" id="checkInDate">@room.CheckIn</p>
                            <p class="card-text" id="checkOutDate">@room.CheckOut</p>
                            <span class="badge badge-primary">免費Wi-Fi</span>
                            <span class="badge badge-secondary">早餐</span>
                            <span class="badge badge-success">海景</span>
                            <button class="btn btn-danger book-now-btn" onclick="bookRoom(@room.ID)">馬上訂房</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No available rooms found.</p>
}


