@{
    ViewData["Title"] = "Backstage";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Backstage";
}



<style>


    .mb-box {
        width: 55%;
        padding: 120px;
        border-radius: 15px;
        border: 2px solid hsla(0, 0%, 85%, 1);
        margin: 0 auto;
        background-color: rgba(222, 237, 240, 0.953);
        box-shadow: 6px 6px 6px 2px gray;
    }

    .logout {
        text-decoration: none;
        border: none;
        background-color: rgba(255, 0, 0, 0.87);
        padding: 5px;
        width: 35%;
        border-radius: 20px;
        margin-bottom: 20px;
        color: white;
        cursor: pointer;
        font-size: 25px;
    }

    .order {
        position: relative;
        top: -150px;
        left: 40px;
        text-decoration: none;
        border: none;
        padding: 5px;
        width: 15%;
        border-radius: 10px;
        margin-bottom: 15px;
        color: whitesmoke;
        cursor: pointer;
        font-size: 25px;
    }

        .order:hover {
            background-color: gray;
        }

    .logout {
        text-decoration: none;
        border: none;
        background-color: rgba(255, 0, 0, 0.87);
        padding: 5px;
        width: 35%;
        border-radius: 20px;
        margin-bottom: 20px;
        color: white;
        cursor: pointer;
        font-size: 25px;
    }

    .order_F {
        border: 2px solid hsla(0, 0%, 85%, 1);
        padding: 5px;
    }

    .order_R {
        border: 2px solid hsla(0, 0%, 85%, 1);
        padding: 5px;
    }

    .T-title:hover {
        background-color: black;
    }

    .btn-custom {
        background-color: #1B813E;
        border-color: #1B813E;
    }

        .btn-custom:hover {
            background-color: #7BA23F;
            border-color: #7BA23F;
        }

</style>
<div class="container-md">
    <h1 class="text-center">顧客問題</h1>
    <table class="table table-hover order_R" style="background-color:white;">
        @if (Model.Count > 0)
        {
            <thead class=" table table-dark">
                <tr>

                    <th>顧客姓名</th>
                    <th>顧客性別</th>
                    <th>顧客電話</th>
                    <th>問題分類</th>
                    <th>問題內容</th>
                    <th>提交時間</th>
                    <th>回覆狀態</th>
                    <th>聯繫顧客</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contact in Model)
                {
                    <tr>

                        <td>@contact.Name</td>
                        <td>
                            @{
                                if (contact.Sex)
                                {
                                    @:男
                                }
                                else
                                {
                                    @:女
                                }
                            }
                        </td>
                        <td>@contact.Phone</td>
                        <td>@contact.QuestionCategory</td>
                        <td>@contact.QuestionContent</td>
                        <td>@contact.SetTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>

                            <p class="@(contact.Finished  ? "text-success" : "text-danger")">
                                @(contact.Finished ? "已回覆" : "尚未回覆")
                            </p>

                        <td>
                                @if (!contact.Finished)
                                {
                                <form asp-action="ContactEdit" asp-controller="Home" method="post">
                                    <input type="hidden" name="contactId" value="@contact.ID" />
                                    <button type="submit" class="btn btn-primary btn-custom">已回覆</button>
                                </form>
                                }
                        </td>
                    </tr>
                }
            </tbody>
        }
        else
        {
            <tbody>
                <tr>
                    <td colspan="8">
                        <h1 style="text-align:center; color:darkolivegreen">所有問題皆已回覆</h1>
                    </td>
                </tr>
            </tbody>
        }
    </table>




    <form id="logoutForm" asp-action="Logout" asp-controller="Home" method="post">
        <button type="submit" class="logout btn  btn-danger">登出</button>
    </form>

</div>