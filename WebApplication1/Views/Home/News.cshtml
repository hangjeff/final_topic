@model IEnumerable<DapperNews.NAH.Newbie>
@{
    ViewData["Title"] = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News Viewer</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1000px;
            margin: 20px auto;
            padding: 0 20px;
        }

        .news-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .news-block {
            width: calc(30% - 10px);
            border-radius: 5px;
            margin-bottom: 20px;
            padding: 20px;
            box-sizing: border-box;
            transition: border 0.1s;
            cursor: pointer;
        }

            .news-block:hover {
                border: 2px solid #007bff;
            }

            .news-block img {
                max-width: 100%;
                height: auto;
                display: block;
                border-radius: 5px;
                margin-bottom: 10px;
            }

        .btn-container {
            text-align: center;
            margin-bottom: 20px;
        }

        .btn {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            margin: 0 10px;
            border: none;
            border-radius: 5px;
            background-color: green;
            color: white;
        }

            .btn:hover {
                background-color: #0056b3;
            }

            .btn.active {
                background-color: #0056b3;
            }

         /* Style for the modal */
    .modal {
        display: none;
        position: fixed; /* Position fixed to stay in the middle */
        z-index: 1; /* Ensure it appears on top of other content */
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.4); /* Semi-transparent black background */
    }

    /* Style for modal content */
    .modal-content {
        background-color: #fefefe;
        margin: 15% auto; /* 15% from the top and centered */
        padding: 20px;
        border: 1px solid #888;
        width: 70%; /* Width of modal */
        max-width: 600px; /* Maximum width of modal */
        border-radius: 5px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        -webkit-animation-name: animatetop;
        -webkit-animation-duration: 0.4s;
        animation-name: animatetop;
        animation-duration: 0.4s;
    }

    /* Close button style */
    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

    .close:hover,
    .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }

    /* -webkit-keyframes animatetop {
        from { top: -300px; opacity: 0; }
        to { top: 0; opacity: 1; }
    }

    keyframes animatetop {
        from { top: -300px; opacity: 0; }
        to { top: 0; opacity: 1; }
    } */
  
    </style>
</head>
<body>
   
        <div class="container">
            <div class="btn-container">
            <button value="News" class="btn" onclick="showNews('News1')">活動公告</button>
            <button value="News1" class="btn" onclick="showNews('News2')">住宿優惠</button>
            </div>

        <div class="news-container">
        @foreach (var n in Model)
            {


                <div id="news1" class="news-block" onclick="showNewsDetails('@n.Header', '@n.Description')">
                    <h1>@n.Date</h1>
                        <img src="/lib/Images/@n.Url" alt="News 1 Image">
                   
                    <h2>@n.Header</h2>
                    <p>@n.News</p>
                </div>
          
           
            }
        </div>
        </div>

    <div id="newsModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2 id="modalHeader"></h2>
            <p id="modalNews"></p>
        </div>
    </div>


    @section scripts {
    <script>
        // Function to filter products by category
        $(document).ready(function () {
            $(".btn").click(function () {
                var selectedCategory = $(this).val();
                // Redirect to action with selected category as parameter
                window.location.href = '@Url.Action("News", "Home")' + '?category=' + selectedCategory;
            });
        });

            // Get the modal
            var modal = document.getElementById("newsModal");

            // Get the <span> element that closes the modal
            var span = document.getElementsByClassName("close")[0];

            // Function to open the modal and populate with news details
            function openModal(header, news) {
                document.getElementById("modalHeader").innerHTML = header;
                document.getElementById("modalNews").innerHTML = news;
                modal.style.display = "block";
            }

            // When the user clicks on <span> (x), close the modal
            span.onclick = function () {
                modal.style.display = "none";
            }

            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }

            // Function to handle click event on news block's image
            function showNewsDetails(header, news) {
                openModal(header, news);
            }
    </script>
}
</body>
</html>





