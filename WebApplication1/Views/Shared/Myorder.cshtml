@model IEnumerable<DapperProject.Models.Mobiles>
@{
    ViewBag.Title = "Myorder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <ul class="nav navbar-nav">
            <li><a href="#">Login</a></li>
            <li><a href="#">Register</a></li>
        </ul>

        <form class="navbar-form navbar-left" action="@Url.Action("Search", "Home")" method="GET">
            <div class="form-group">
                <input type="text" class="form-control" name="query" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</nav>

<div class="container-fluid">
    <h3>My Cart</h3>
    <table id="cartTable" class="table table-hover">
        <thead>
            <tr>
                <th>NO.</th>
                <th>:</th>
                <th>Product</th>
                <th>Image</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                double totalSum = 0;
                foreach (var x in Model)
                {
                    double itemTotal = x.Price * (x.Quantity ?? 1);
                    totalSum += itemTotal;

                    <tr>
                        <td class="slno">@x.slno</td>
                        <td class="ordertime">@x.Ordertime</td>
                        <td>@x.FruitsName</td>
                        <td><img src="/lib/Images/@x.Url" height="100" width="75" /></td>
                        <td class="price">NT$@x.Price</td>
                        <td class="quantity">@x.Quantity</td>
                        <td>NT$@itemTotal</td>
                        <td>
                            <button class="btn btn-danger" onclick="location.href='@Url.Action("Remove", "AddToCart", new { slno = x.slno })'">
                                Remove
                            </button>
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="4"><b>Total</b></td>
                    <td colspan="2"><b>NT$@totalSum</b></td>
                </tr>
            }
            else
            {
                <tr>
                    <td colspan="6">Your cart is empty.</td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("OrderConfirmation", "Home")" class="btn btn-primary">Print</a>
    <a href="@Url.Action("commodity", "Home")" class="btn btn-success">Continue Shopping</a>
    <button type="button" class="btn btn-warning" id="btnPlaceOrder">Place Order</button>
</div>

<script>
    $(document).ready(function () {
        $('#btnPlaceOrder').click(function () {
            var cartItems = [];
            $('#cartTable tbody tr').each(function () {
                var slno = parseInt($(this).find('.slno').text());
                var ordertime = $(this).find('.ordertime').text();
                var quantity = parseInt($(this).find('.quantity').text());
                var price = parseFloat($(this).find('.price').text().replace('NT$', ''));

                if (!isNaN(slno) && !isNaN(quantity) && !isNaN(price)) {
                    var item = {
                        slno: slno,
                        Ordertime: ordertime,
                        Quantity: quantity,
                        Price: price
                    };
                    cartItems.push(item);
                }
            });

            $.post('@Url.Action("PlaceOrder", "Home")', { cartItems: cartItems }, function () {
                window.location.href = '@Url.Action("OrderConfirmation", "Home")';
            });
        });
    });
</script>








